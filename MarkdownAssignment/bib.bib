journal = {Climatic Change},
month = {apr},
number = {3},
pages = {301--329},
title = {{Climate change vulnerability assessments: An evolution of conceptual thinking}},
url = {https://link.springer.com/content/pdf/10.1007{\%}2Fs10584-006-0329-3.pdf http://link.springer.com/10.1007/s10584-006-0329-3},
