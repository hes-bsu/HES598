journal = {Applied Geography},
keywords = {Climate change,Mapping,PCA,SADC,Trade-offs,Vulnerability indices},
number = {1-2},
pages = {515--524},
publisher = {Elsevier Ltd},
title = {{Using Principal Component Analysis for information-rich socio-ecological vulnerability mapping in Southern Africa}},
url = {http://dx.doi.org/10.1016/j.apgeog.2012.08.004},
volume = {35},
