doi = {10.1073/pnas.1207068110},
file = {:Users/Hunt/Desktop/Literature/Vicente-Serrano et al{\_}2013{\_}Response of vegetation to drought time-scales across global land biomes.pdf:pdf},
issn = {00278424},
